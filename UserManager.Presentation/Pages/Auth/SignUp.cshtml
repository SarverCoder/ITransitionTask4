@page
@model UserManager.Presentation.Pages.Auth.SignUpModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Sign Up</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input asp-for="user.Username" type="text" class="form-control" id="username" name="Username" required>
                </div>

                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <input asp-for="user.FirstName" type="text" class="form-control" id="firstName" name="FirstName" required>
                </div>

                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input asp-for="user.LastName" type="text" class="form-control" id="lastName" name="LastName" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input asp-for="user.Email" type="email" class="form-control" id="email" name="Email" required>
                    <span asp-validation-for="user.Email" style="color: red;"></span>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input asp-for="user.Password" type="password" class="form-control" id="password" name="Password" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
            </form>
            <p class="mt-3 text-center">Already have an account? <a asp-page="/Auth/Login">Sign in</a></p>
        </div>
    </div>
</div>